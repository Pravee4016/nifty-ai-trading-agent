# Dockerfile for Streamlit Dashboard
# Deploy to Cloud Run

FROM python:3.11-slim

WORKDIR /app

# Copy requirements
COPY requirements.txt requirements-viz.txt ./

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt -r requirements-viz.txt

# Copy application code
COPY config ./config
COPY viz ./viz
COPY data_module ./data_module

# Streamlit config
RUN mkdir -p ~/.streamlit
RUN echo "[server]\nport = 8080\naddress = 0.0.0.0\nheadless = true\nenableCORS = false\nenableXsrfProtection = false\n" > ~/.streamlit/config.toml

# Set environment variables
ENV PORT=8080
ENV PYTHONUNBUFFERED=1

# Expose port
EXPOSE 8080

# Run the application
CMD ["streamlit", "run", "viz/streamlit_dashboard.py", "--server.port", "8080", "--server.address", "0.0.0.0"]
